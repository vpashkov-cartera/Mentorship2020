{% extends 'layouts/base.html.twig' %}

{% block body %}
    <main class="main">
        <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <div>
                        <h3>Create book</h3>
                        <form action="/src/crud/createBook.php" method="POST">
                            <div class="form-group">
                                <label>
                                    <input name="name" required class="form-control" type="text">Name</label>
                                <label>
                                    <input name="isbn" required class="form-control" type="text">ISBN</label>
                                <label>
                                    <input name="url" required class="form-control" type="url">Url</label>
                                <label>
                                    <input name="poster" required class="form-control" type="text">Poster</label>
                                <label>
                                    <input name="price" required class="form-control" type="number">Price</label>
                            </div>

                            <button class="btn btn-primary" type="submit">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock body %}
