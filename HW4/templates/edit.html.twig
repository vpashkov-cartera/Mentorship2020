{% extends 'layouts/base.html.twig' %}

{% block body %}
    <main class="main">
        <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <div>
                        <h3>Edit Book {{ bookName }}</h3>
                        <form action="/src/crud/updateBook.php" method="POST">
                            <input type="hidden" name="id" value="{{ bookId }}">
                            <div class="form-group">
                                <label>
                                    <input name="name" class="form-control" type="text"
                                           value="{{ bookName }}">Name</label>
                                <label>
                                    <input name="isbn" class="form-control" type="text"
                                           value="{{ bookIsbn }}">ISBN</label>
                                <label>
                                    <input name="url" class="form-control" type="url"
                                           value="{{ bookUrl }}">Url</label>
                                <label>
                                    <input name="poster" class="form-control" type="text"
                                           value="{{ bookPoster }}">Poster</label>
                                <label>
                                    <input name="price" class="form-control" type="number"
                                           value="{{ bookPrice }}">Price</label>
                            </div>

                            <button class="btn btn-primary" type="submit">Update</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
{% endblock body %}
